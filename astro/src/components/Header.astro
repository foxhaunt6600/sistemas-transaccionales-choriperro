---
import Layout from '../layouts/Layout.astro';
---


	<main>
		<div class="image-container">
		<img
			src="/images/choriperro_logo.jpg"  
		/>
		</div>
		<h1>Pide tu  <span class="text-gradient">PIEZA</span></h1>
		<p class="instructions">
			Bienvenidos al mejor <code>AMANECEDERO</code> de tu localidad<br />
			<strong>Cansado de ir a donde ROSA!!!</strong> CHORIPAN es la solución.
		</p>
		


<style>
main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		text-align: center; /* Centra el contenido del main */
	}
.image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 200px; /* Tamaño del círculo */
    height: 200px; /* Tamaño del círculo */
    margin: 0 auto; /* Centra el contenedor */
    border-radius: 50%; /* Hace que el contenedor sea un círculo */
    overflow: hidden; /* Asegura que la imagen se ajuste al círculo */
    border: 4px solid #fff; /* Borde blanco alrededor del círculo */
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%); /* Opcional: Agrega un fondo radial */
}

.astro-image {
    width: 100%; /* Asegura que la imagen llene el círculo en ancho */
    height: 100%; /* Asegura que la imagen llene el círculo en alto */
    object-fit: cover; /* Mantiene la proporción de la imagen y la recorta si es necesario */
}


	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		margin-bottom: 1em;
	}
	.text-gradient {
    background-image: linear-gradient(45deg, #d72631, #ff6347); /* Gradiente de rojo moderno */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
}
.instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(255, 105, 97, 0.25); /* Borde con color rojo coral semitransparente */
    background: linear-gradient(45deg, #e63946, #ff6b6b); /* Gradiente de rojo vibrante y rojo coral */
    padding: 1.5rem;
    border-radius: 8px;
}
</style>